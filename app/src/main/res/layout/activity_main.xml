<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Modules"
        android:gravity="center"
        android:textColor="#4361ee"
        android:textSize="50dp"
        android:background="@drawable/rectangle">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/android"
            android:background="@drawable/custom_button"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" \n\n C346 \n Mobile App Development "
            android:layout_weight="18"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:background="@drawable/rectangle_angle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n C203 \n Web Application \n Development in php "
            android:layout_weight="18"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:background="@drawable/rectangle_angle"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/html"
            android:background="@drawable/custom_button2"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/uiux"
            android:background="@drawable/custom_button"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n\n C218 \n UI/UX Design for Apps "
            android:layout_weight="18"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:background="@drawable/rectangle_angle"/>

    </LinearLayout>



</LinearLayout>